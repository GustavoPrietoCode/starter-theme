{# SLIDER & NEWS #}
<div class="container-fluid my-5 mx-3">
    <div class="row g-2 g-lg-3 align-items-center">
        {# columna con slider #}
        <div class="col-10 col-md-6 border rounded-3 border-danger contenedor_carousel me-4 mb-4">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner p-3">
                    <div class="carousel-item active">
                        <img src="{{ site.theme.link }}/static/img/slider_academy/aldi_slider01.png" class="d-block w-100 rounded-3" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ site.theme.link }}/static/img/slider_academy/aldi_slider01.png" class="d-block w-100 rounded-3" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ site.theme.link }}/static/img/slider_academy/aldi_slider01.png" class="d-block w-100 rounded-3" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        {# columna con news #}
        <div class="col-10 col-md-5 border rounded-3 border-dark bloque_noticias">
