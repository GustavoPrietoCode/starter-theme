  <div class="container-fluid">
    <a class="navbar-brand text-white" href="#">menú academy</a>
  </div>
</nav>
{# END MENÚ STICKY #}

{# LOGO #}
<div class="container-fluid w-75">
    <div class="row g-2 my-5">
        <div class="col">
            <h1>ALDI ACADEMY PRÓXIMAMENTE</h1>
        </div>
        <div class="col-12 col-md-8 logo">
            <img src="{{ site.theme.link }}/static/img/LOGO_ALDI_A.png" class="img-fluid" alt="logo aldi supermercados">
        </div>

    </div>
</div>
{# END LOGO #}

{# SLIDER & NEWS #}
<div class="container-fluid my-5">
    <div class="row m-3">
        {# columna con slider #}
        <div class="col-md-6 columna_carousel">

            <div class="border rounded-3 contenedor_carousel">
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">

                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>

                    <div class="carousel-inner p-3">
                        <div class="carousel-item active">
                            <img src="{{ site.theme.link }}/static/img/slider_academy/aldi_slider01.png" class="d-block w-100 rounded-3" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="{{ site.theme.link }}/static/img/slider_academy/aldi_slider01.png" class="d-block w-100 rounded-3" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="{{ site.theme.link }}/static/img/slider_academy/aldi_slider01.png" class="d-block w-100 rounded-3" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        
        </div>
        {# columna con news #}
        <div class="col-md-5 offset-md-1 columna_news">

            <div class="border border-dark contenedor_news">
                <div class="d-flex flex-column mb-3">
                    <div class="p-2 my-2 titulo_noticia">
                        <h3>News & short content</h3>
                    </div>
